<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="detailsViewModel"
            type="com.github.malitsplus.shizurunotes.ui.charadetails.CharaDetailsViewModel" />
        <import type="com.github.malitsplus.shizurunotes.R"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bigImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/bigImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    bind:imageUrl="@{detailsViewModel.mutableChara.imageUrl}"
                    bind:placeHolder="@{R.drawable.place_holder_full}" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailsItemChara"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{clickListener}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bigImageLayout">

                <View
                    android:id="@+id/divider1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/detailsCharaIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/positionIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    bind:imageUrl="@{detailsViewModel.mutableChara.iconUrl}"
                    bind:placeHolder="@{R.drawable.mic_chara_icon_place_holder}" />

                <TextView
                    android:id="@+id/detailsCharaNameKataText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@{detailsViewModel.mutableChara.unitName, default=unitName}"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/detailsCharaIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/detailsCharaNameKanjiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@{detailsViewModel.mutableChara.actualName, default=actualName}"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/detailsCharaIcon"
                    app:layout_constraintTop_toBottomOf="@+id/detailsCharaNameKataText" />

                <ImageView
                    android:id="@+id/positionIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    bind:src="@{detailsViewModel.mutableChara.positionIcon}" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/detailsCharaStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailsItemChara">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_status"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintVertical_bias="0.0">

                        <com.allen.library.SuperTextView
                            android:id="@+id/txtPhyAtk"
                            style="@style/StatusSuperTextView"
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:sLeftTextString="@string/text_physical_atk"
                            bind:sRightText="@{String.valueOf(detailsViewModel.mutableChara.charaProperty.atk)}">

                        </com.allen.library.SuperTextView>

                        <com.allen.library.SuperTextView
                            android:id="@+id/txtMagAtk"
                            style="@style/StatusSuperTextView"
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/txtPhyAtk"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/txtPhyAtk"
                            app:layout_constraintVertical_bias="1.0"
                            app:sLeftTextString="@string/text_magical_atk"
                            bind:sRightText="@{String.valueOf(detailsViewModel.mutableChara.charaProperty.magicStr)}" />

                        <com.allen.library.SuperTextView
                            android:id="@+id/txtPhyCrt"
                            style="@style/StatusSuperTextView"
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtPhyAtk"
                            app:layout_constraintVertical_bias="1.0"
                            app:sLeftTextString="@string/text_physical_crt"
                            bind:sRightText="@{String.valueOf(detailsViewModel.mutableChara.charaProperty.physicalCritical)}" />

                        <com.allen.library.SuperTextView
                            android:id="@+id/txtMagCrt"
                            style="@style/StatusSuperTextView"
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/txtPhyCrt"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/txtPhyCrt"
                            app:layout_constraintVertical_bias="0.0"
                            app:sLeftTextString="@string/text_magical_crt"
                            bind:sRightText="@{String.valueOf(detailsViewModel.mutableChara.charaProperty.magicCritical)}">

                        </com.allen.library.SuperTextView>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>
