<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_state_background_color_list</item>
        <item name="android:textColor">@color/chip_state_text_color_list</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StatusSuperTextView">
        <item name="sDividerLineColor">#5C95EF</item>
        <item name="sLeftTextBackground">@drawable/color_text_background</item>
        <item name="sLeftTextColor">#FFFFFF</item>
        <item name="sLeftViewMarginLeft">0dp</item>
        <item name="sUseRipple">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
